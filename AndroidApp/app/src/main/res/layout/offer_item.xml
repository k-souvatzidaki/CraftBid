<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/offer_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/offer_static"
        android:src="@drawable/auction"
        android:scaleType="centerCrop"
        android:contentDescription="@string/auction_icon_by_icons8"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/offer_static"
        app:layout_constraintStart_toEndOf="@id/offer_icon"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="start"
        android:textSize="15sp"
        android:textColor="?android:attr/textColor" />

    <TextView
        android:id="@+id/offer_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/offer_icon"
        app:layout_constraintEnd_toStartOf="@id/offer"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:gravity="start"
        android:text="@string/bid"
        android:textSize="15sp"
        android:textColor="?android:attr/textColor"/>

    <TextView
        android:id="@+id/offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/offer_static"
        app:layout_constraintEnd_toStartOf="@id/decline_btn"
        android:layout_marginBottom="10dp"
        android:gravity="start|bottom"
        android:textSize="15sp"
        android:textColor="?android:attr/textColor"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/decline_btn"
        app:backgroundTint="@android:color/holo_green_light"
        android:padding="0dp"
        android:textAllCaps="false"
        android:text="@string/sell"
        android:textSize="13sp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accept_btn"
        app:layout_constraintStart_toEndOf="@id/offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@android:color/holo_red_light"
        android:padding="0dp"
        android:textAllCaps="false"
        android:text="@string/decline"
        android:textSize="13sp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>