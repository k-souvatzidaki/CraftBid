<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListingPrivateActivity">

    <!--TODO remove unnecessary hardcoded android:text -->

    <include layout="@layout/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/listing_name_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Ξύλινη Καρέκλα"
        android:textSize="35sp"
        android:textColor="?android:attr/textColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/by_creator_cr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_creator"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColor"
            android:layout_gravity="center_vertical"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp">
            <Button
                android:id="@+id/creator_cr_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mitsos_creations"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="?android:attr/textColor"
                app:backgroundTint="@android:color/transparent"
                android:background="@null"
                android:padding="0dp"
                android:gravity="center_vertical"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="openProfile"/>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listing_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp">
            <ImageView
                android:id="@+id/listing_photo_cr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/see_more_cr"
                android:contentDescription="@string/photo_profile" />
            <Button
                android:id="@+id/see_more_cr"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/listing_photo_cr"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/listing_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="150dp">
                <TextView
                    android:id="@+id/username_cr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/lorem_ipsum"
                    android:textSize="18sp"
                    android:textColor="?android:attr/textColor"/>
            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pin_cr"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@android:drawable/ic_dialog_map"
                    android:backgroundTint="?attr/colorPrimary"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/location_cr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:text="Καλλιθέα"/>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/points_cr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/points"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColor"/>
                <TextView
                    android:id="@+id/points_value_cr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:text="15"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp">
        <TextView
            android:id="@+id/initial_price_cr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_offer"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="?android:attr/textColor"/>
        <TextView
            android:id="@+id/colon_cr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/price_cr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="30,49"/>
    </LinearLayout>

    <Button
        android:id="@+id/edit_btn_cr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:textAllCaps="false"
        android:layout_marginHorizontal="50dp"/>
    <Button
        android:id="@+id/show_offers_btn_cr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_offers"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>