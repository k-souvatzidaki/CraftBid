<?xml version="1.0" encoding="utf-8"?>
<com.stelladk.arclib.ArcLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/item"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    app:ArcType="inner"
    app:ArcRadius="30dp">

    <com.stelladk.arclib.ArcLayout
        android:id="@+id/img_item"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bag"
        android:layout_gravity="top"
        app:ArcType="inner"
        app:BottomLeftArc="outer"
        app:ArcRadius="30dp">
        <ImageView
            android:id="@+id/plus_sign"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/ic_add"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </com.stelladk.arclib.ArcLayout>

    <TextView
        android:id="@+id/title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Wolt Market Athens"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:lines="1"
        android:scrollHorizontally="false"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/label_item"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="grocery"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:lines="1"
        android:scrollHorizontally="false"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="15â‚¬"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:lines="1"
        android:scrollHorizontally="false"
        android:ellipsize="end"/>

</com.stelladk.arclib.ArcLayout>