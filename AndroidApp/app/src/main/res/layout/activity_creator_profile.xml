        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="@string/edit"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="toggleEditCreator"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/rewards_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/see_rewards"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="openRewardsCustomer"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/thumbnails_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/add_listing_btn"
            android:layout_toLeftOf="@id/add_listing_btn"
            android:gravity="start"
            android:text="@string/listings"
            android:textSize="27sp"
            android:textColor="?android:attr/textColor"/>

        <Button
            android:id="@+id/add_listing_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:onClick="addListing"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/thumbnails_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reviews_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/review_btn"
            android:layout_toLeftOf="@id/review_btn"
            android:gravity="start"
            android:text="@string/evaluations"
            android:textSize="27sp"
            android:textColor="?android:attr/textColor"/>

        <Button
            android:id="@+id/review_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/evaluation"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="addEvaluation"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviews_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"/>

    </LinearLayout>
