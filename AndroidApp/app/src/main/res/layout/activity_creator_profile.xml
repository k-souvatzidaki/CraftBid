<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreatorProfile">

    <include layout="@layout/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/fullname_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/report_btn"
            android:layout_toLeftOf="@id/report_btn"
            android:gravity="center"
            android:hint="@string/fullname"
            android:text="@string/fullname"
            android:textSize="30sp"
            android:textColor="?android:attr/textColor"
            android:inputType="text"
            android:importantForAutofill="no"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/report_btn"
            android:layout_toLeftOf="@id/report_btn"
            android:gravity="center"
            android:text="@string/fullname"
            android:textSize="30sp"
            android:textColor="?android:attr/textColor"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/report_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|top"
            android:padding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="?attr/colorPrimary"
            app:strokeColor="?android:attr/textColor"
            app:strokeWidth="2dp"
            android:text="@string/report"
            android:textSize="15sp"
            android:textColor="?android:attr/textColor"
            android:textAllCaps="false"
            android:checkable="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.stelladk.arclib.ArcLayout
            android:id="@+id/profile_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:ArcType="inner"
            app:ArcRadius="75dp"
            android:background="@drawable/mitsos"
            android:contentDescription="@string/photo_profile"/>

        <LinearLayout
            android:id="@+id/profile_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
